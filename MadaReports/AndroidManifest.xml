<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.madareports"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <!-- Maybe this permission can be removed -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <!-- Activities -->
        <activity
            android:name="com.madareports.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.madareports.ui.activities.RegionsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.madareports.ui.activities.TreatmentsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.madareports.ui.activities.ReportsListActivity"
            android:label="" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.madareports.ui.activities.SettingsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.madareports.ui.activities.details.DetailsActivity"
            android:label="@string/title_activity_detail" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.madareports.ui.activities.ReportsListActivity" />
        </activity>

        <!-- End of Activities -->


        <!-- Receivers -->
        <receiver
            android:name="com.madareports.sms.IncomingSMSReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS" >
            <intent-filter android:priority="1001" >
                <action android:name="android.provider.Telephony.SMS_RECEIVED" >
                </action>
            </intent-filter>
        </receiver>

        <!-- End of Receivers -->
    </application>

</manifest>