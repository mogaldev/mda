<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.Sherlock.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.        -->           
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColor">@color/activity_text_color</item>      
    </style>
    

    <style name="unread_list_item_text">
        <item name="android:textColor">@color/unread_item_textcolor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="read_list_item_text">
        <item name="android:textColor">@color/read_item_textcolor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- DetailActivity Style -->


    <!-- General Info Fragment Style -->
    <style name="fragment_general_info_relative_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="fragment_general_info_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layoutDirection" tools:targetApi="17">rtl</item>
        <item name="android:textDirection" tools:targetApi="17">rtl</item>
    </style>

    <style name="fragment_general_info_edittext">
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="fragment_general_info_edittext_big" parent="@style/fragment_general_info_edittext">
        <item name="android:layout_height">75dp</item>
    </style>

    <style name="fragment_general_info_spinner" parent="fragment_general_info_edittext" />
    <!-- End of General Info Fragment Style -->


    <!-- Tech Info Fragment Style -->
    <style name="fragment_tech_info_relative_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="fragment_tech_info_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="fragment_tech_info_textview_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">75dp</item>
        <item name="android:layout_marginLeft">75dp</item>
    </style>

    <style name="fragment_tech_info_seekbar">

        <!-- Important! keep the paddingTop and paddingBottom because without it the SeekBar is distorted -->
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:gravity">center</item>
    </style>

        <style name="fragment_tech_info_editableSeekField">                
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    
    <integer name="blood_pressure_view_width_dimension">200</integer>
    <integer name="blood_pressure_view_height_dimension">75</integer>

    <dimen name="blood_pressure_view_height_dimension_dialog">80dp</dimen>
    <!-- End of Tech Info Fragment Style -->


    <!-- Treatments Fragment -->


    <!-- End of Treatments Fragment -->


    <!-- End of DetailActivity Style -->


    <!-- PatientReportActivity Style -->
    <style name="activity_patient_report_field">
       <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>
    
    <style name="activity_patient_report_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layoutDirection" tools:targetApi="17">rtl</item>
        <item name="android:textDirection" tools:targetApi="17">rtl</item>
    </style>

    <style name="activity_patient_report_edittext">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_alignParentLeft">false</item>
        <item name="android:layout_alignParentRight">true</item>                
    </style>

    <!-- End of PatientReportActivity Style -->


    <!-- Style for the Show Original Message button -->
    <style name="btnStyleOrange" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/custom_btn_orange</item>
        <item name="android:padding">10dip</item>
    </style>

</resources>