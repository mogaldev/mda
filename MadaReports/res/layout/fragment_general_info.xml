<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout style="@style/ReportDetails_General_relative_layout" >

            <EditText
                android:id="@+id/txtReportId"
                style="@style/ReportDetails_General_edittext"
                android:layout_width="@dimen/general_info_fields_width"
                android:layout_alignParentRight="true"
                android:inputType="numberSigned" />

            <TextView
                style="@style/ReportDetails_General_textview"
                android:text="@string/fragment_general_info_report_id" />
        </RelativeLayout>

        <RelativeLayout style="@style/ReportDetails_General_relative_layout" >

            <EditText
                android:id="@+id/txtAddress"
                android:layout_width="@dimen/general_info_fields_width"
                android:layout_height="@dimen/general_info_address_height"
                android:layout_alignParentRight="true" >

                <requestFocus />
            </EditText>

            <TextView
                style="@style/ReportDetails_General_textview"
                android:text="@string/fragment_general_info_address" />

            <Button
                android:id="@+id/btnPinLocation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/general_info_pin_location_height"
                android:layout_below="@id/txtAddress"
                android:background="@drawable/map_background"
                android:fontFamily="sans-serif-light"
                android:scaleType="centerCrop"
                android:text="@string/fragment_general_info_pin_location" />
        </RelativeLayout>

        <RelativeLayout style="@style/ReportDetails_General_relative_layout" >

            <EditText
                android:id="@+id/txtDescription"
               android:layout_width="@dimen/general_info_fields_width"
                android:layout_height="@dimen/general_info_description_height"                                
                android:layout_alignParentRight="true"
                android:inputType="textMultiLine" />

            <TextView
                style="@style/ReportDetails_General_textview"
                android:text="@string/fragment_general_info_description" />
        </RelativeLayout>

        <RelativeLayout style="@style/ReportDetails_General_relative_layout" >

            <EditText
                android:id="@+id/txtNotes"
                android:layout_width="@dimen/general_info_fields_width"
                android:layout_height="@dimen/general_info_notes_height"
                android:layout_alignParentRight="true"
                android:inputType="textMultiLine" />

            <TextView
                style="@style/ReportDetails_General_textview"
                android:text="@string/fragment_general_info_notes" />
        </RelativeLayout>

        <RelativeLayout style="@style/ReportDetails_General_relative_layout" >

            <CheckBox
                android:id="@+id/ckbIsReported"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/fragment_general_info_is_reported"
                android:textColor="@color/activity_text_color" />

            <ImageView
                android:id="@+id/imgIsReportedIcon"
                android:layout_width="@dimen/general_info_is_reported_icon_size"
                android:layout_height="@dimen/general_info_is_reported_icon_size"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/ckbIsReported"
                android:src="@drawable/exclamation_basic_yellow" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>