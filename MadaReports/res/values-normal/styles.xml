<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- General Info Fragment Style -->
    <style name="fragment_general_info_edittext">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <!-- End of General Info Fragment Style -->


    <!-- Tech Info Fragment Style -->
    <style name="fragment_tech_info_textview_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">75dp</item>
        <item name="android:layout_marginLeft">75dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:text">000</item>
    </style>

    <style name="fragment_tech_info_seekbar">
        <!-- Important! keep the paddingTop and paddingBottom because without it the SeekBar is distorted -->
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:gravity">center</item>
    </style>

    <integer name="blood_pressure_view_width_dimension">175</integer>
    <integer name="blood_pressure_view_height_dimension">75</integer>
    <dimen name="blood_pressure_view_height_dimension_dialog">80dp</dimen>
    <!-- End of Tech Info Fragment Style -->

</resources>