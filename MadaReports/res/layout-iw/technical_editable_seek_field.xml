<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tvLabelEditSeekField"
        style="@style/fragment_tech_info_textview"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="label" />

    <SeekBar
        android:id="@+id/seekEditSeekField"
        style="@style/fragment_tech_info_seekbar"
        android:layout_width="214dp"
        android:paddingTop="25dp"
        android:paddingBottom="20dp"        
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imgEditSeekField"
        android:max="@integer/max_pulse" />

    <TextView
        android:id="@+id/tvValueEditSeekField"
        style="@style/fragment_tech_info_textview_value"
        android:layout_centerHorizontal="true"
        android:text="0" />

    <ImageView
        android:id="@+id/imgEditSeekField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/seekEditSeekField"
        android:layout_alignParentLeft="true"
        android:src="@android:drawable/ic_menu_edit" />

</RelativeLayout>